.banner {
  height: 900px;
  overflow: hidden;
  position: relative;
  background-color: var(--black);
  color: var(--white);
  display: block;
}

.banner-background {
  height: 100%;
  background-image: url(" {{ '/img/banner_2023.webp' | htmlBaseUrl }} ");
  background-size: cover;
  background-position: center;
  filter: saturate(0.7) brightness(1.2) blur(3px);
}

.banner-text {
  text-shadow: 0px 0px 40px #000, 0px 0px 40px #000;
}

.banner-text p {
  margin: 0;
  font-weight: bold;
}

.banner-text-top {
  font-size: 50px;
}

.banner-text-middle {
  font-size: 75px;
  font-weight: 900;
  font-family: Barlow-Bold;
}

.banner-text-bottom {
  font-size: 50px;
}


.banner-button {
  margin-top: 30px;
  border-radius: 40px;
  border: none;
  background-color: var(--white);
}

.banner-button p {
  padding: 8px 24px 8px 24px;
  margin: 0;
  font-family: Barlow;
  font-weight: bold;
  font-size: 20px;
  color: var(--black);
}

.panel-container {
  display: inline-flex;
  flex-direction: row;
  max-width: 1100px;
  text-align: left;
}

.reversed {
  background-color: var(--red) !important;
}

.reversed .panel-container {
  flex-direction: row-reverse;
}

.reversed p, .reversed strong, .reversed h1 {
  color: var(--white) !important;
}

.panel {
  padding: 70px;
  text-align: center;
  height: calc(50% - 160px);
  display: block;
}

.panel-image {
  height: 260px;
  margin: auto;
}

.panel-image img {
  height: 100%;
  border-radius: 20px;
}

.panel strong {
  color: var(--red);
}

.panel-text h1 {
  padding: 0px;
  font-size: 32px;
  color: var(--red);
}

.panel-text p {
  font-size: 20px;
  font-family: Barlow;
}

.panel-spacer {
  width: 60px;
  height: auto;
  flex-shrink: 0;
}

@media (max-width: 950px) {
  .banner {
    height: 500px;
  }

  .banner-text-top {
    font-size: 27px;
  }
  
  .banner-text-middle {
    font-size: 40px;
  }
  

  .banner-text-bottom {
    font-size: 27px;
  }

  .banner-button {
    margin-top: 20px;
  }

  .banner-button p {
    padding: 6px 18px;
    font-size: 15px;
  }

  .panel-container, .reversed .panel-container {
    flex-direction: column;
  }

  .panel {
    padding: 40px 20px;
  }
  
  .panel-image {
    margin-top: 20px;
    margin-bottom: 20px;
  }

  .panel-text {
    width: 391px;
    height: 50%;
  }
  .panel-text p, h1 {
    margin-left: 10px;
    margin-right: 10px;
  }

  .panel-text h1 {
    margin-top: 10px;
    margin-bottom: 25px;
  }
}

@media (max-width: 500px) {
  .banner {
    height: 100vw;
  }

  .banner-text-top {
    font-size: 5.26vw;
  }
  
  .banner-text-middle {
    font-size: 7.9vw;
  }
  
  .banner-text-bottom {
    font-size: 5.26vw;
  }

  .banner-button {
    margin-top: 4vw;
  }

  .banner-button p {
    padding: 1.2vw 3.6vw;
    font-size: 3vw;
  }
  
  .panel {
    padding: 6vw 4vw;
  }

  .panel-image {
    width: 85%;
    height: auto;
    margin: auto;
    margin-top: 4vw;
    margin-bottom: 4vw;
  }
  .panel-image img {
    width: 100%;
    height: auto;
  }

  .panel-text {
    width: 87%;
    margin: auto;
  }

  .panel-text p, h1 {
    margin-left: 2vw;
    margin-right: 2vw;
  }

  .panel-text p {
    font-size: 4vw;
  }
  
  .panel-text h1 {
    font-size: 6.4vw;
    margin-top: 2vw;
    margin-bottom: 5vw;
  }
}