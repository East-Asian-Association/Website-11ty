@font-face {
  font-family: 'Barlow-Bold';
  font-style: normal;
  font-weight: 900;
  src: local('')
  , url("{{ '/fonts/BarlowSemiCondensed-Regular.woff2' | htmlBaseUrl }}") format('woff2')
}

@keyframes fade-in {
  from {
    opacity: 1;
  }
  to {
    opacity: 0.8;
  }
}

@keyframes fade-out {
  from {
    opacity: 0.8;
  }
  to {
    opacity: 1;
  }
}

:root {
  --white: #f7f7f7;
  --red: #911f2a;
  --black: #1A1A1A;
  --gray: #e4e4e4;
  --dark-gray: #b1b1b1;
}

body {
  position: relative;
  min-height: 100vh;
  margin: 0;
  font-family: Barlow
  , sans-serif;
  background-color: var(--white);
  color: var(--black);
}

h1,
h2 {
  font-family: Barlow-Bold;
}

h3,
strong {
  font-weight: bold;
}

.fadeOnHover {
  animation: fade-out 0.2s forwards;
}

.fadeOnHover:hover {
  animation: fade-in 0.2s forwards;
  cursor: pointer;
}

.centered {
  margin: 0;
  position: absolute;
  -ms-transform: translateX(-50%) translateY(-50%);
  transform: translateX(-50%) translateY(-50%);
  top: 50%;
  left: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  white-space: nowrap;
}
